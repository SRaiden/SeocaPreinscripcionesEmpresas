
@{
    ViewData["Title"] = "Contactar";
}

@Html.Partial("~/Views/Shared/MisViews/Banner.cshtml")

@{
    if (ViewBag.Session != false) // Si esta logueado que se muestre la barra menu
    {
        @Html.Partial("~/Views/Shared/BarraNavegacion.cshtml")
    }

}

<div class="w3-content" style="max-width:564px">

    @using (Html.BeginForm("Contactar", "Contacto", FormMethod.Post, new { @class = "w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" }))
    {
        <h2 class="w3-center">Contacto</h2>

        <div class="w3-row w3-section" hidden>
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="correoEmpresa" type="text" value="@ViewBag.correoEmpresa" readonly>
            </div>
        </div>

        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge far fa-clipboard"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="asunto" type="text" placeholder="Asunto">
            </div>
        </div>

        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-pencil"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="mensaje" type="text" placeholder="Mensaje">
            </div>
        </div>

        <button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding" type="submit">Enviar</button>

    }

   
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <script type="text/javascript">
        alert("@ViewBag.Error");
    </script>
}

@if (!string.IsNullOrEmpty(ViewBag.Confirmacion))
{
    <script type="text/javascript">
        alert("@ViewBag.Confirmacion");
    </script>
}