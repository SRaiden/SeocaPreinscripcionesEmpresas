@model Sindicato_Viedma.Models.ViewModels.VerBoleta

<div class="w3-container" style="line-height : 5px;"></div>

<div class="w3-panel w3-wide bg-zul w3-text-white w3-content w3-margin-left w3-margin-right w3-center w3-padding-24">
    SUBIR ARCHIVO
</div>

<div class="w3-padding w3-margin-left small2 w3-center">

    <!-- ---------------- FORMULARIO ---------------- -->
    @using (Html.BeginForm("SubirArchivo", "Actas", FormMethod.Post, new { @class = "w3-container", autocomplete = "off", enctype = "multipart/form-data" }))
    {
        <div class="w3-row w3-container">

            <div class="w3-row">
                <div class="w3-third w3-container">
                    <label>N° de Pago</label>
                    @Html.TextBoxFor(model => model.Id, new { @class = "w3-input w3-border", placeholder = "Numero_Acta", id = "Numero_Acta", @readOnly = "readonly" })
                </div>
                <div class="w3-third w3-container">
                    <label>Tipo</label>
                    @Html.TextBoxFor(model => model.Tipo, new { @class = "w3-input w3-border", placeholder = "Tipo", id = "Tipo", @readOnly = "readonly" })
                </div>
                <div class="w3-third w3-container">
                    @*@Html.TextBox("File", "", new { type = "file" })*@
                    <p><input accept="image/png,image/jpeg,application/pdf" type="file" name="File" id="File"></p>
                </div>
            </div>

            <br />

            <div class="w3-row">
                <div class="w3-third w3-container">
                    @*<input type="text" id="direccion" value="" hidden />*@
                    @Html.HiddenFor(model => model.Cuenta, new { @class = "w3-input w3-border", placeholder = "Tipo", id = "Cuenta" })
                </div>
                
                <div class="w3-third w3-container">
                    <p><button class="w3-btn w3-text-white bg-zul w3-hover-zul" type="button" onclick="cerrarId01()">Cancelar</button></p>
                </div>
                <div class="w3-third w3-container">
                    <p><button class="w3-btn w3-text-white bg-zul w3-hover-zul" type="submit" onclick="return validarSubidaArchivo();">Subir Archivo</button></p>
                </div>

                @*<div class="w3-col w3-container" style="width: 33%;">
                    </div>*@
            </div>
        </div>
    }

</div>


@Html.Raw(ViewBag.Message)

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}


@section scripts{
    <script src="~/js/Actas.js"></script>
    <script src="~/js/modalRegistrarse.js"></script>

}
