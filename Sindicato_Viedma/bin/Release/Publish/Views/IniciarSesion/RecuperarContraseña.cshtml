@model Sindicato_Viedma.Models.ViewModels.CrearRegistro

<div class="w3-container w3-padding-48">

    <div class="w3-container bg-zul w3-padding-32">
        <h2 class="w3-text-white" style="margin-left:50px">Recuperar Contraseña</h2>
    </div>
    <br>

    @using (Html.BeginForm("RecuperarContraseña", "IniciarSesion", FormMethod.Post, new { @class = "w3-container w3-card w3-padding-16", autocomplete = "off" }))
    {
        <div class="w3-row">
            <div class="w3-col w3-container">
                <input type="text" class="w3-input w3-border" id="CUIT" name="CUITCon" placeholder="Cuit" onchange="validarRecuperarContraseñaMomento()">
                <br />
                <input type="email" class="w3-input w3-border" id="EMail" name="EMailCon"  placeholder="EMail" onchange="validarRecuperarContraseñaMomento()">
            </div>
        </div>
        /**/

        <br />
        /**/

        <div class="w3-row">
            <div class="w3-col w3-container">
                <button class="w3-button bg-zul w3-text-white w3-hover-blue" onclick="return validarRecuperarContraseña()" type="submit">Recuperar</button>
                <button class="w3-btn w3-text-white bg-zul w3-hover-zul" type="button" onclick="cerrarId01()">Cancelar</button>
            </div>
        </div>
    }           

</div>

@section scripts{
    <script src="~/js/modalRegistrarse.js"></script>
}