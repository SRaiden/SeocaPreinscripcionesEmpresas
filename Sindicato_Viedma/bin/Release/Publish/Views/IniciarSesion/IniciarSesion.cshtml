@model Sindicato_Viedma.Models.ViewModels.Login

@{
    ViewData["Title"] = "Inicio";
}

<!-- Banner -->
@Html.Partial("~/Views/Shared/MisViews/Banner.cshtml")

@{
    if (ViewBag.Session != false) // Si esta logueado que se muestre la barra menu
    {
        @Html.Partial("~/Views/Shared/BarraNavegacion.cshtml")
    }
}


<div class="w3-content" style="max-width:1564px">

    <!-- ---------------------------- Modal 3 ---------------------------- -->
    <div id="id01" class="w3-modal" style="">
        <div class="w3-modal-content">
            <div id="modal-content">

            </div>
        </div>
    </div>

    <div class="w3-row">

        <!-- --------------------------- Blog --------------------------- -->
        <div class="w3-col l8 s12">
            <!-- Blog entry -->
            <div class="w3-card-2 w3-margin w3-white">
                <h2 class="w3-center w3-opacity-min w3-padding-8">SISTEMA DE RECAUDACIÓN</h2>

                @using (Html.BeginForm("IniciarSesion", "IniciarSesion", FormMethod.Post, new { @class = "w3-container", autocomplete = "off" }))
                {
                    <label class="w3-hover-zultxt">CUIT</label>
                    <input class="w3-input w3-border w3-animate-input" placeholder="Cuit" style="width:75%" id="IngCUIT" name="CUIT" onchange="validarMomentoSesion()" value="@ViewBag.CookieUser" />

                    @*<label class="w3-hover-zultxt" >Sucursal</label >
            <input class="w3-input w3-border w3-animate-input" placeholder="Sucursal" style="width:75%" id="Sucursal" name="Sucursal" value="0" onchange="validarMomentoSesion()" />*@

                    <label class="w3-hover-zultxt">Password</label>
                    <input class="w3-input w3-border w3-animate-input" placeholder="Password" style="width:75%" id="Password" name="Password" type="password" value="@ViewBag.CookiePass" />

                    <br>
                    <button class="w3-button w3-hover-blue-grey bg-zul w3-text-white" onclick="return validarIniciarSesion()" type="submit">Ingresar</button>

                    <input class="w3-radio w3-margin-left" type="checkbox" name="recordar" value="true" id="recordar" />

                    <label class="w3-text-grey">Recordar Contraseña</label>

                }

                <br />

                <div class="w3-container">
                    @if (string.IsNullOrEmpty(ViewBag.block))
                    {
                        <button onclick="document.getElementById('id01').style.display='block'" class="btnRegistrarse w3-button w3-text-white w3-padding w3-hover-blue-grey bg-zul botonRegistrarse" data-id="1" data-cuit="3" data-toggle="modal" type="button">
                            Registrarse
                        </button>
                    }
                    else
                    {
                        <button onclick="document.getElementById('id01').style.display='block'" class="btnRegistrarse w3-button w3-text-white w3-padding w3-hover-blue-grey bg-zul botonRegistrarse" data-id="2" data-cuit="3" data-toggle="modal" type="button" id="registro1">
                            Registrarse
                        </button>

                    }


                    <button onclick="document.getElementById('id01').style.display='block'" class="btnRecuperarContraseña w3-button w3-text-white w3-padding w3-hover-blue-grey bg-zul" data-toggle="modal" type="button">
                        Recuperar Contraseña
                    </button>
                </div>

                <input id="cuitEncontrado" value="@ViewBag.cuitEncontrado" hidden />
                <input id="NombreFantasiaEncontrado" value=" @ViewBag.NombreFantasiaEncontrado" hidden />
                <input id="RazonSocialEncontrado" value="@ViewBag.RazonSocialEncontrado" hidden />
                <input id="EmailEncontrado" value="@ViewBag.EmailEncontrado" hidden />
                <input id="block" value="@ViewBag.block" hidden />

                <div class="banner w3-animate-left  w3-txtn">
                    <p class="w3-xxlarge w3-center bg-zul w3-text-white w3-padding-16">
                        SINDICATO DE EMPLEADOS <br> Y OBREROS
                        DE COMERCIO <br>  Y AFINES <b>ZONA OESTE</b>
                    </p>
                </div>
            </div>
        </div>


        <!-- --------------------------- Side --------------------------- -->
        <div class="w3-col l4">
            @Html.Partial("~/Views/Shared/MisViews/MesaAyuda.cshtml")
        </div>

        <!-- END Introduction Menu -->

    </div>
</div>

<script>
    if (@ViewBag.CookieRecordar != null) {
        document.getElementById('recordar').checked = true;
    }
</script>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <script type="text/javascript">
        alert("@ViewBag.Error");
    </script>
}

@if (!string.IsNullOrEmpty(ViewBag.agregarEmpresa))
{
    <script type="text/javascript">
        alert("@ViewBag.agregarEmpresa");
    </script>
}

@if (!string.IsNullOrEmpty(ViewBag.cuitEncontrado))
{
    <script type="text/javascript">
        $(document).ready(function () {
            // despues del código
            $('.botonRegistrarse').click();
        });
    </script>
}

@section scripts{
    <script src="~/js/modalRegistrarse.js"></script>
    <script>
        agregarElementosEncontrados();
    </script>
}